<% @article.comments.each do |comment| %>
  <% unless comment.archived? %>
    <p>
      <strong>Commenter:</strong>
      <%= comment.commenter %>
    </p>

    <p>
      <strong>Comment:</strong>
      <%= comment.body %>
    </p>

    <p>
      <%= button_to "Destroy Comment", article_comment_path(comment),method: :delete %>
    </p>
  <% end %>

<% end %>